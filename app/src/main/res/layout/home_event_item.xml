<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    android:id="@+id/homepageEventCard">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="170dp"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:text="Tue, 21 September 2023"
                android:paddingTop="15dp"
                android:paddingLeft="25dp"
                android:textColor="#000000"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="match_parent"
                    android:layout_width="6dp"
                    android:background="@drawable/rounded_rectangle_side_home"/>
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textColor="#000"
                        android:text="உலகத் திருக்குறள் பேரவை"
                        android:textSize="20dp"
                        android:paddingLeft="10dp"
                        />
                    <LinearLayout
                        android:layout_height="30dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_height="30dp"
                            android:layout_width="30dp"
                            android:src="@drawable/baseline_location_on_24"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="chengalpattu, India"
                            android:textAllCaps="true"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="30dp"
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/baseline_access_time_24"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:text="8:00 am - 5:00 pm"
                            android:textAllCaps="true"
                            android:paddingLeft="10dp"
                            android:paddingTop="5dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>